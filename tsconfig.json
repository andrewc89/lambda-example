{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": [
          "esnext"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ]
}
